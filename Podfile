  # Database
  pod 'Realm', '~> 2.0.4'

  # Fabric
  pod 'Fabric', '~> 1.6'
  pod 'Crashlytics', '~> 3.8'

  # UI
  pod 'JTCalendar', git: 'https://github.com/tercteberc/JTCalendar.git'
  pod 'SDWebImage', '~> 3.8'

  # Maps
  pod 'GoogleMaps', '~> 2.1'
  pod 'LMGeocoder', '~> 1.0'
  pod 'INTULocationManager', '~> 4.2'

  # Google Analytics
  pod 'Google/Analytics', '~> 3.0'
end
